{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-5">
		<div class="d-flex">
			<a class="btn btn-primary" href={{path('app_create_board')}}>Ajouter un board</a>
			<a class="btn btn-secondary ms-auto" href={{path('app_login')}}>Se connecter</a>
			<a class="btn btn-dark ms-1" href={{path('app_register')}}>S'inscrire</a>
		</div>
		{% for board in boards %}
			<div class="card mt-3">
				<div class="d-flex card-header">
					<h5 class="">{{ board.nom}}</h5>
					<a href="{{ path('app_todo_new', {board: board.id})}}" class="btn btn-outline-success ms-auto me-2 mt-2">+</a>
				</div>
				<div class="card-body">
					<h5 class="card-title">{{ board.description}}</h5>
					<h1>Todos</h1>
					{% for todo in board.todos %}
						<div class="mt-4">
							{{ include('todo/show.html.twig') }}
						</div>

					{% else %}
						<h3>Aucune t√¢che</h3>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
